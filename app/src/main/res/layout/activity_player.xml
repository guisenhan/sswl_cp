<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent">
    <sswl.caipai.ui.activity.play.NEVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_view"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="15dp"
                    >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/user_photo"
                        app:riv_corner_radius="15dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_liver_photo"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="直播Live"
                            android:textColor="@color/white"
                            android:id="@+id/tv_liver_name"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>
                    <sswl.caipai.widget.HorizontalListView
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:id="@+id/hlv_play_audience"
                        ></sswl.caipai.widget.HorizontalListView>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="财票:1670175"
                        android:textColor="@color/white"
                        android:id="@+id/tv_cp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_circle_arrow"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="财拍号：16560815"
                        android:textColor="@color/white"
                        android:id="@+id/tv_account"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016.5.30"
                        android:textColor="@color/white"
                        android:id="@+id/tv_date"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dp"
            android:id="@+id/rv_opera"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_send_message"
                android:id="@+id/iv_send_message"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_insure_message"
                    android:id="@+id/iv_message"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_share"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/iv_filterBtn"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_down_arrow"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/iv_down_arrow"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_quit"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/iv_finish"
                    />
            </LinearLayout>
        </RelativeLayout>
        <ListView
            android:id="@+id/lv_message"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:divider="@null"
            android:layout_above="@+id/rv_opera"
            android:scrollbars="none" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:id="@+id/rv_send_message"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_vertical_padding"
                android:paddingBottom="@dimen/text_vertical_padding"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:background="@drawable/tv_yellow_back"
                android:text="@string/send"
                android:paddingRight="@dimen/text_horizontal_padding"
                android:id="@+id/tv_send_message"
                android:layout_alignParentRight="true"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ed_white_back"
                android:paddingTop="@dimen/text_vertical_padding"
                android:paddingBottom="@dimen/text_vertical_padding"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:layout_marginLeft="@dimen/text_horizontal_padding"
                android:layout_marginRight="@dimen/text_horizontal_padding"
                android:layout_toLeftOf="@id/tv_send_message"
                android:id="@+id/ed_message_text"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back_pop"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:id="@+id/camera_container"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_above="@id/rv_opera"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/share"
                android:textColor="@color/tv_white"
                android:textSize="@dimen/textSize18"
                android:gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@mipmap/icon_share_1"
                android:drawablePadding="@dimen/text_horizontal_padding"
                android:id="@+id/tv_share"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/flash_light"
                android:textColor="@color/tv_white"
                android:textSize="@dimen/textSize18"
                android:gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@mipmap/icon_flash_light"
                android:drawablePadding="@dimen/text_horizontal_padding"
                android:id="@+id/tv_flash_light"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/turn_camera"
                android:textColor="@color/tv_white"
                android:textSize="@dimen/textSize18"
                android:gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableLeft="@mipmap/icon_trans_camera"
                android:drawablePadding="@dimen/text_horizontal_padding"
                android:id="@+id/tv_turn"
                />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>