<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mine_divider"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_vertical_padding"
        android:paddingBottom="@dimen/text_vertical_padding"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/action_view_margin_right"
        android:layout_marginRight="@dimen/action_view_margin_right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cp_contribute_list"
            android:textColor="@color/tv_normal"
            android:textSize="16sp"
            />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="最新"
           android:layout_alignParentRight="true"
           android:textColor="@color/tv_yellow"
           android:id="@+id/tv_new_live"

           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新"
            android:textColor="@color/tv_normal"
            android:id="@+id/tv_hot_live"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_new_live"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mine_divider"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_user_live"
        ></ListView>
</LinearLayout>