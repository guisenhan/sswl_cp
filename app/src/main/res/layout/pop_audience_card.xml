<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lv_container"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray_bg"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/text_vertical_padding"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_vertical_padding"
                android:layout_marginLeft="@dimen/text_horizontal_padding"
                android:layout_marginRight="@dimen/text_horizontal_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report"
                    android:textColor="@color/tv_blue"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:id="@+id/tv_report"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_blue_cancel"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_close"
                    />
            </RelativeLayout>
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/user_photo"
                android:scaleType="centerCrop"
                app:riv_corner_radius="50dp"
                android:id="@+id/iv_user_photo"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/tv_normal"
                    android:id="@+id/tv_user_name"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_sex"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/iv_sex"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_level_0"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="财拍号：888888"
                    android:id="@+id/tv_account"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杭州市"
                    android:layout_marginLeft="8dp"
                    android:textSize="13sp"
                    android:drawableLeft="@mipmap/label_location"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证：最强王者"
                android:textColor="@color/tv_blue"
                android:layout_marginTop="@dimen/text_vertical_padding"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_sign"
                android:text="最怕一生碌碌无为，还安慰自己平凡可贵"
                android:layout_marginTop="@dimen/text_vertical_padding"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="left"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注：60"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送出：888万"
                    android:drawableRight="@mipmap/icon_diamond"
                    android:textColor="@color/tv_pink"
                    android:layout_marginTop="@dimen/text_vertical_padding"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="left"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝：60"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="财票：888万"
                    android:layout_marginTop="@dimen/text_vertical_padding"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingBottom="@dimen/text_vertical_padding"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tv_blue"
                android:id="@+id/tv_attention"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="私信"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tv_blue"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="回复"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tv_blue"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="主页"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tv_blue"
                android:id="@+id/tv_homepage"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>