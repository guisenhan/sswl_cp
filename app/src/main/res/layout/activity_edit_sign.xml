<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    tools:context="sswl.caipai.ui.activity.user.EditNicknameActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/main_color"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/chat_back"
            android:layout_marginLeft="@dimen/text_horizontal_padding"
            android:layout_centerVertical="true"
            android:id="@+id/iv_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editInfo"
            android:textStyle="bold"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/tv_white"
            android:layout_centerInParent="true"
            android:id="@+id/tv_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="@dimen/text_17dp"
            android:textColor="@color/tv_white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/text_horizontal_padding"
            android:id="@+id/tv_save"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ed_margin_vertical"
        android:layout_marginLeft="@dimen/ed_margin_horizontal"
        android:layout_marginRight="@dimen/ed_margin_horizontal"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/text_vertical_padding"
            android:paddingTop="@dimen/text_vertical_padding"
            android:paddingLeft="@dimen/text_horizontal_padding"
            android:background="@drawable/ed_login_input_back"
            android:id="@+id/ed_nickname"
            android:inputType="text"
            android:maxEms="32"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="36"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_numbers"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_nickname_hint"
        android:textColor="@color/tv_normal"
        android:layout_marginLeft="@dimen/ed_margin_horizontal"
        android:id="@+id/tv_tips"
        />
</LinearLayout>
